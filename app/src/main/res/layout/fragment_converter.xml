<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.converter.ConverterFragment">

    <TextView
        android:id="@+id/Çevirici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Çevirici"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="constraintLayout2">

        <TextView
            android:id="@+id/cevrilenulke"
            android:layout_width="200dp"
            android:layout_height="80dp"
            tools:text="çevrilenülke"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="150dp"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/cevirenulke"
            android:layout_width="200dp"
            android:layout_height="80dp"
            tools:text="çevirenülke"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cevrilenulke"
            android:layout_marginStart="150dp"
            android:layout_marginTop="24dp"/>

        <Spinner
            android:id="@+id/spinnerFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="@id/constraintLayout"
            app:layout_constraintTop_toTopOf="@id/cevrilenulke"
            app:layout_constraintBottom_toBottomOf="@id/cevrilenulke"
            app:layout_constraintEnd_toStartOf="@id/cevrilenulke"/>

        <Spinner
            android:id="@+id/spinnerTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@id/cevirenulke"
            app:layout_constraintEnd_toStartOf="@id/cevirenulke"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/constraintLayout"
            app:layout_constraintTop_toTopOf="@id/cevirenulke" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yedi_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sekiz_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sekiz_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/yedi_button"
            app:layout_constraintEnd_toStartOf="@id/dokuz_button"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dokuz_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/sekiz_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dort_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yedi_button"
            app:layout_constraintEnd_toStartOf="@id/bes_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bes_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/dort_button"
            app:layout_constraintEnd_toStartOf="@id/alti_button"
            app:layout_constraintTop_toBottomOf="@id/sekiz_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alti_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/bes_button"
            app:layout_constraintTop_toBottomOf="@id/dokuz_button"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bir_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dort_button"
            app:layout_constraintEnd_toStartOf="@id/iki_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/iki_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/bir_button"
            app:layout_constraintEnd_toStartOf="@id/uc_button"
            app:layout_constraintTop_toBottomOf="@id/bes_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uc_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/iki_button"
            app:layout_constraintTop_toBottomOf="@id/alti_button"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nokta_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text=","
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bir_button"
            app:layout_constraintEnd_toStartOf="@id/sifir_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sifir_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/nokta_button"
            app:layout_constraintEnd_toStartOf="@id/esittir_button"
            app:layout_constraintTop_toBottomOf="@id/iki_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/esittir_button"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/sifir_button"
            app:layout_constraintTop_toBottomOf="@id/uc_button"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>